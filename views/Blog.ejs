<div class="author ">
    <h1 class="author__heading">Welcome to Our Blog.</h1>
    <p class="author__body">Explore The Unknown With Us.</p>
    

 <img src="/images/green-cube.jpg" alt="green cube" class="hero-image" >
    
</div>

<section class="articles">
    <h2 class="articles__heading">Latest Posts</h2>

    <ul class="article-ul">
        <% data.forEach(post => { %>

        <li>
           
                <a href="/post/<%= post._id %>">
                <span><%= post.title %>
                    
                </span>
                <span class="article-list__date"> <%= post.createdAt.toDateString() %>
                    
                </span>
            </a>
        </li>
       <% }) %>
    </ul>


    <% if(nextPage !== null) { %>
        <a href ="/?page=<%= nextPage %>" class="pagination">&lt; View Previous Posts</a>
    <% } %>





</section>

